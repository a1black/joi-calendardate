{
  "compilerOptions": {
    "checkJs": true,
    "module": "commonjs",
    "target": "es6",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ],
  "typeAcquisition": {
    "exclude": ["jest", "joi"]
  }
}
